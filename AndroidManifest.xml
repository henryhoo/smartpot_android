<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jikexueyuan.usingslidingmenu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.ConnectActivity"
            android:label="@string/title_activity_connect" >
        </activity>
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.PotActivity"
            android:label="@string/title_activity_pot" >
        </activity>
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.SocialActivity"
            android:label="@string/title_activity_social" >
        </activity>
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.DataActivity"
            android:label="@string/title_activity_data" >
        </activity>
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.MypotActivity"
            android:label="@string/title_activity_mypot"
            android:parentActivityName="com.jeremyfeinstein.slidingmenu.lib.app.SlidingListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeremyfeinstein.slidingmenu.lib.app.SlidingListActivity" />
        </activity>
        <activity
            android:name="com.jikexueyuan.usingslidingmenu.PotmyActivity"
            android:label="@string/title_activity_potmy"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
    </application>

</manifest>

